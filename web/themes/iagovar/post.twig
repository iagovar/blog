<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="{{ meta.description|striptags }}">
    <meta name="author" content="{{ config.author }}">

    <!-- Favicon -->
    <link rel="icon" href="{{ theme_url }}/img/favicon.ico" type="image/x-icon">

    <!-- Custom CSS & JS -->
    <link href="{{ theme_url }}/css/styles.css" rel="stylesheet">
    <script src="{{ theme_url }}/js/scripts.js"></script>

    <!-- Yandex.Metrika counter -->
    <script type="text/javascript" >
        (function(m,e,t,r,i,k,a){m[i]=m[i]||function(){(m[i].a=m[i].a||[]).push(arguments)};
        m[i].l=1*new Date();k=e.createElement(t),a=e.getElementsByTagName(t)[0],k.async=1,k.src=r,a.parentNode.insertBefore(k,a)})
        (window, document, "script", "https://cdn.jsdelivr.net/npm/yandex-metrica-watch/tag.js", "ym");
 
        ym(56129947, "init", {
             clickmap:true,
             trackLinks:true,
             accurateTrackBounce:true
        });
     </script>
     <noscript><div><img src="https://mc.yandex.ru/watch/56129947" style="position:absolute; left:-9999px;" alt="" /></div></noscript>
     <!-- /Yandex.Metrika counter -->

    <title>{{ site_title }}</title>
</head>
<body onload="main()">
    {% include 'header-links.twig' %}
    <div class="main-container">
        <section id="post-meta" style="min-height: unset">
        <h1 class="post-title">{{ meta.title }}</h1>
        <div class="post-description">{{ meta.description }}</div>
        <div class="post-date">{{ meta.date_formatted }}</div>
        </section>
        <section id="content">{{ content }}</section>
    </div>
    {% include 'footer-links.twig' %}
</body>
</html>